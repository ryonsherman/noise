
    {%- macro listdir(index) -%}
      {%- set pwd  = index[0] -%}
      {%- set dirs = index[1] -%}
      <ul>
        <a href="{{ pwd.lstrip('/') }}">~/{{ pwd.strip('/') }}</a>
        {% for dir in dirs -%}
          <li><a href="{{ pwd.lstrip('/') + dir }}">{{ dir }}</a></li>
        {% endfor -%}
      </ul>
    {%- endmacro %}
    {{ listdir(index[0]) }}
    {% if index[1] -%}
      {{ listdir(index[1]) }}
    {% endif -%}
